@model IEnumerable<ZeiterfassungPierburg.Models.ViewModels.ProduktivitätViewModel>


<section class="content container-fluid">
    <div class="box-header with-border">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3>Übersicht der Produktivität</h3>

                

                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Produktionsanlage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fertigungsteil)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Produktivität)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Produktionsanlage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fertigungsteil)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Produktivität)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <h4>@ViewBag.MitarbeiterMessage</h4>
                @Html.ActionLink("Neue Suche", "Create", null, new { @class = "pull-left btn btn-default", @type = "button", })
            </div>
        </div>
    </div>
</section>
@section scripts{
    @Styles.Render("~/bundles/tableStyleBundle")
    @Scripts.Render("~/bundles/tableScriptBundle")

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}
