@model IEnumerable<ZeiterfassungPierburg.Models.MitarbeiterInSchicht>

<section class="content-header">
    <h1>Übersicht der Mitarbeiter in Schichten</h1>
</section>
<section class="content container-fluid">
    <div class="box-header with-border">
        <div class="box box-info">
            <div class="box-header with-border">
                <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SchichtInfoID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MitarbeiterID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Stück)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FertigungsteilID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProduktionsanlageID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DirStunden)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InDirStunden)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IstInSAPEingetragen)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.MitarbeiterID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stück)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FertigungsteilID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProduktionsanlageID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DirStunden)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InDirStunden)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IstInSAPEingetragen)
                            </td>
                            <td>
                                @Html.ActionLink("Bearbeiten", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Löschen", "Delete", new { id = item.ID }, new { onclick = "return confirm('Wirklich löschen?');" })
                            </td>
                        </tr>
                        }
                    </table>
                    @Html.ActionLink("Hinzufügen", "Create", null, new { @class = "pull-left btn btn-default", @type = "button", })
            </div>
        </div>
    </div>
</section>

