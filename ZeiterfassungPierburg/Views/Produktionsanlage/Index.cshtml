@model IEnumerable<ZeiterfassungPierburg.Models.Produktionsanlage>


<section class="content container-fluid">
    <div class="box-header with-border">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3>Übersicht der Produktionsanlagen</h3>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Bezeichner)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.APNr)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Kostenstelle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SAPAPNr)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IstEineMaschine)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IstAktiv)
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Bezeichner)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.APNr)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Kostenstelle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SAPAPNr)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IstEineMaschine)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IstAktiv)
                                </td>

                                <td>
                                    @Html.ActionLink("Bearbeiten", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Löschen", "Delete", new { id = item.ID }, new { onclick = "return confirm('Bist du sicher?');" })
                                    | <a href="~/Produktivität?ProduktionsanlageID=@item.ID&FertigungsteilID=0&MitarbeiterID=0&Art=0&Produktivität=0&Day=0&Month=0&Year=0&FertigungteilList=System.Linq.Enumerable%2BWhereSelectEnumerableIterator%602%5BSystem.Collections.Generic.KeyValuePair%602%5BSystem.Int32%2CSystem.String%5D%2CSystem.Web.Mvc.SelectListItem%5D&MitarbeiterList=System.Linq.Enumerable%2BWhereSelectEnumerableIterator%602%5BSystem.Collections.Generic.KeyValuePair%602%5BSystem.Int32%2CSystem.String%5D%2CSystem.Web.Mvc.SelectListItem%5D&ProduktionsanlageList=System.Linq.Enumerable%2BWhereSelectEnumerableIterator%602%5BSystem.Collections.Generic.KeyValuePair%602%5BSystem.Int32%2CSystem.String%5D%2CSystem.Web.Mvc.SelectListItem%5D&MonthList=System.Collections.Generic.List%601%5BSystem.Web.Mvc.SelectListItem%5D&DayList=System.Collections.Generic.List%601%5BSystem.Web.Mvc.SelectListItem%5D&ArtList=System.Collections.Generic.List%601%5BSystem.Web.Mvc.SelectListItem%5D">Produktivität</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <h4>@ViewBag.ProduktionsanlageMessage</h4>
                @Html.ActionLink("Hinzufügen", "Create", null, new { @class = "pull-left btn btn-default", @type = "button", })
            </div>
        </div>
    </div>
</section>
@section scripts{
    @Styles.Render("~/bundles/tableStyleBundle")
    @Scripts.Render("~/bundles/tableScriptBundle")

    <script>

        $(document).ready(function () {
            $('#example').DataTable();
        });


    </script>
}

