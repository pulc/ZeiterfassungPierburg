@model ZeiterfassungPierburg.Models.ViewModels.ProduktivitätViewModel

@if (Convert.ToInt32(Session["AccessLayer"]) == 0 || Convert.ToInt32(Session["AccessLayer"]) == null)
{
    Html.RenderPartial("ErrorAccessDenied");
}
else
{
    <section class="content container-fluid">
        <div class="box-header with-border">
            <div class="box">
                <div class="box-header with-border">
                    <h3>Übersicht der Produktivität</h3>

                    <h5>
                        Benutzte Filter: <span class="label label-warning"> @ViewBag.Message </span>
                    </h5>
                    <div class="row">
                        <div class="col-lg-6 col-xs-6">

                            <div class="box-footer text-black">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <!-- Progress bars -->
                                        <div class="clearfix">
                                            <div id="productivity"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h4>@ViewBag.MitarbeiterMessage</h4>
                    @Html.ActionLink("Neue Suche", "Create", null, new { @class = "pull-left btn btn-default", @type = "button", })
                </div>
            </div>
        </div>
    </section>
    @section scripts{
        @Styles.Render("~/bundles/tableStyleBundle")
        @Scripts.Render("~/bundles/tableScriptBundle")

        <script>
            $(document).ready(function () {

                var html = '';
                            var dictionaryMaschinen = @Html.Raw(Json.Encode(ViewBag.Produktivität));
            for (var key in dictionaryMaschinen ){
                var value = dictionaryMaschinen[key];

                if (!Number.isNaN(value)) {

                    html = html + ` <div class="clearfix">
                            <span class="pull-left">`+ key + `</span>
                            <small class="pull-right">`+ value.toFixed(2) + `%</small>
                        </div>
                        <div class="progress xs">
                            <div class="progress-bar progress-bar-green" style="width: `+ value + `%;"></div>
                        </div>`;
                }
                else {
                                        html = html + ` <div class="clearfix">
                            <span class="pull-left">`+ key + `</span>
                            <small class="pull-right">keine Einträge</small>
                        </div>
                        <div class="progress xs">
                            <div class="progress-bar progress-bar-green" style="width: `+ value + `%;"></div>
                        </div>`;

                }
            }
            var r = document.getElementById("productivity");
                r.innerHTML = html;


    });
        </script>
    }
}
