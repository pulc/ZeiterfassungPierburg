@model IEnumerable<ZeiterfassungPierburg.Models.Fertigungsteil>

<section class="content container-fluid">
    <div class="box-header with-border">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3>Übersicht der Teile</h3>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ZeichenNr)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Bezeichnung)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.teZEIT)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AnzahlMA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IstAktiv)
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ZeichenNr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Bezeichnung)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.teZEIT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AnzahlMA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IstAktiv)
                            </td>
                            <td>
                                @Html.ActionLink("Bearbeiten", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Löschen", "Delete", new { id = item.ID }, new { onclick = "return confirm('Wirklich löschen?');" })
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
                <h4>@ViewBag.FertigungsteilMessage</h4>
                @Html.ActionLink("Hinzufügen", "Create", null, new { @class = "pull-left btn btn-default", @type = "button", })
            </div>
        </div>
    </div>
</section>
@section scripts{
    @Styles.Render("~/bundles/tableStyleBundle")
    @Scripts.Render("~/bundles/tableScriptBundle")

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}

